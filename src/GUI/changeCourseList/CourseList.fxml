<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.changeCourseList.CourseListController">
    <tabs>
        <Tab onSelectionChanged="#fillTable" text="Normale Kurse">
            <content>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <TableView fx:id="courseTable" onMouseClicked="#mouseOnClick" BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="id" editable="false" prefWidth="75.0" text="KurseID" />
                                <TableColumn fx:id="courseName" prefWidth="75.0" text="Kursename" />
                                <TableColumn fx:id="trainerName" prefWidth="75.0" text="Trainer" />
                                <TableColumn fx:id="timeBegin" prefWidth="75.0" text="Zeit (von)" />
                                <TableColumn fx:id="timeEnd" prefWidth="75.0" text="Zeit(bis)" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                     <BorderPane.margin>
                        <Insets bottom="5.0" />
                     </BorderPane.margin>
                        </TableView>
                    </center>
                    <top>
                        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER">
                            <children>
                                <TextField fx:id="courseTXT" prefWidth="200" promptText="KurseID/Kursename" />
                                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#searchButton" text="Suche">
                                    <HBox.margin>
                                        <Insets left="5.0" />
                                    </HBox.margin></Button>
                                <Region maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="200.0" HBox.hgrow="ALWAYS" />
                                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#goToMainWindow" text="Zum Hauptfenster" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </HBox>
                    </top>
                    <right>
                        <VBox spacing="10.0" BorderPane.alignment="CENTER">
                            <children>
                                <TextField fx:id="courseID" disable="true" editable="false" promptText="Kurse ID" />
                                <TextField fx:id="coursename" promptText="Kursename" />
                                <TextField fx:id="trainer" promptText="Trainer" />
                                <TextField fx:id="startTime" promptText="12:00" />
                                <TextField fx:id="endTime" promptText="14:00" />
                                <Button mnemonicParsing="false" onAction="#changeButtonPressed" text="Kunndendaten ändern" />
                            </children>
                            <padding>
                                <Insets left="5.0" right="5.0" />
                            </padding>
                     <BorderPane.margin>
                        <Insets bottom="5.0" />
                     </BorderPane.margin>
                        </VBox>
                    </right>
                </BorderPane>
            </content>
        </Tab>
        <Tab onSelectionChanged="#fillVideoTable" text="Video Kurse">
            <content>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <TableView fx:id="vCourseTable" onMouseClicked="#mouseOnClickVideoCourse" BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="vID" editable="false" prefWidth="75.0" text="KurseID" />
                                <TableColumn fx:id="vCourseName" prefWidth="75.0" text="Kursename" />
                                <TableColumn fx:id="vTrainerName" prefWidth="75.0" text="Trainer" />
                                <TableColumn fx:id="vURL" prefWidth="75.0" text="Link" />
                                <TableColumn fx:id="vRemark" prefWidth="75.0" text="Bemerkung" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </center>
                    <top>
                        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER">
                            <children>
                                <TextField fx:id="vSearch" prefWidth="200" promptText="KurseID/Kursename" />
                                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#searchButtonVideo" text="Suche">
                                    <HBox.margin>
                                        <Insets left="5.0" />
                                    </HBox.margin></Button>
                                <Region maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="200.0" HBox.hgrow="ALWAYS" />
                                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#goToMainWindow" text="Zum Hauptfenster" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </HBox>
                    </top>
                    <right>
                        <VBox spacing="10.0" BorderPane.alignment="CENTER">
                            <children>
                                <TextField fx:id="vCourseIDChanged" disable="true" editable="false" promptText="Kurse ID" />
                                <TextField fx:id="vCourseNameChanged" promptText="Kursename" />
                                <TextField fx:id="vTrainerChanged" promptText="Trainer" />
                                <TextField fx:id="vURLChanged" promptText="https://www.youtube.com/" />
                        <TextArea fx:id="vRemarkChanged" prefHeight="200.0" prefWidth="200.0" promptText="Bemerkung" />
                                <Button mnemonicParsing="false" onAction="#videoChangeButtonPressed" text="Videokurs ändern" />
                            </children>
                            <padding>
                                <Insets left="5.0" right="5.0" />
                            </padding>
                        </VBox>
                    </right>
                </BorderPane>
            </content>
        </Tab>
    </tabs>
</TabPane>
