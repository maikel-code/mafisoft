<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--<?import validateTextFieldFXML.zipCode.NumberTextField?>-->

<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="changeCourseList.CourseListController">
    <center>
        <TableView fx:id="courseTable" onMouseClicked="#mouseOnClick" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="id" editable="false" prefWidth="75.0" text="KurseID"/>
                <TableColumn fx:id="courseName" prefWidth="75.0" text="Kursename"/>
                <TableColumn fx:id="trainerName" prefWidth="75.0" text="Trainer"/>
                <TableColumn fx:id="timeBegin" prefWidth="75.0" text="Zeit (von)"/>
                <TableColumn fx:id="timeEnd" prefWidth="75.0" text="Zeit(bis)"/>
                <TableColumn fx:id="customerQuantitys" prefWidth="75.0" text="Anzahl der Mietglieder"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <top>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="courseTXT" prefWidth="200" promptText="KurseID/Kursename"/>
                <Button mnemonicParsing="false" onAction="#searchButton" text="Suche"/>
                <Button mnemonicParsing="false" onAction="#goToMainWindow" text="Zum Hauptfenster">
                    <HBox.margin>
                        <Insets left="180.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </HBox>
    </top>
    <right>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="courseID" editable="false" promptText="Kurse ID"/>
                <TextField fx:id="coursename" promptText="Kursename"/>
                <TextField fx:id="trainer" promptText="Trainer"/>
                <TextField fx:id="startTime" promptText="12:00"/>
                <TextField fx:id="endTime" promptText="14:00"/>
                <Button mnemonicParsing="false" onAction="#changeButton" text="Kunndendaten Ã¤ndern"/>
            </children>
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
        </VBox>
    </right>
</BorderPane>
